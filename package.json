{
  "name": "charlie-jackson-website",
  "version": "1.0.0",
  "description": "Wordpress site for charliejackson.com",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "docker-compose up -d --force-recreate --build",
    "stop": "docker stop $(docker ps -a -q) && docker rm $(docker ps -a -q)",
    "backup": "docker exec db sh -c 'exec mysqldump --all-databases -uroot -p\"$MYSQL_ROOT_PASSWORD\"' > `echo $PWD`/data-dump.sql",
    "restore": "docker exec db sh -c 'exec mysql -uroot -p\"$MYSQL_ROOT_PASSWORD\" charliejackson' < `echo $PWD`/data-dump.sql",
    "remove-volume": "docker volume rm charliejacksonwebsite_db_data",
    "dbLogs": "docker logs --follow db",
    "dev": "gulp",
    "bash-db": "docker exec -i -t db /bin/bash",
    "bash-web": "docker exec -i -t web /bin/bash"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cajacko/charlie-jackson-website.git"
  },
  "keywords": [
    "wordpress",
    "php",
    "sass",
    "docker",
    "jenkins",
    "javascript"
  ],
  "author": {
    "name": "Charlie Jackson",
    "email": "contact@charliejackson.com",
    "url": "https://charliejackson.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cajacko/charlie-jackson-website/issues"
  },
  "homepage": "https://github.com/cajacko/charlie-jackson-website#readme",
  "devDependencies": {
    "babel-preset-es2015": "^6.18.0",
    "babelify": "^7.3.0",
    "browser-sync": "^2.18.6",
    "browserify": "^13.3.0",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^3.1.1",
    "gulp-batch": "^1.0.5",
    "gulp-clean-css": "^2.3.2",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^3.0.0",
    "gulp-sourcemaps": "^1.9.1",
    "gulp-uglify": "^2.0.0",
    "gulp-watch": "^4.3.11",
    "jquery": "^3.1.1",
    "node-env-file": "^0.1.8",
    "normalize.css": "^5.0.0",
    "sass-module-importer": "^1.4.0",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0"
  }
}
