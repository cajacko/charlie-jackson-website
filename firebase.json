{
  "hosting": {
    "public": "build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      }
    ],
    "redirects": [
      {
        "source": "/:location",
        "destination": "https://projects.charliejackson.com/:location",
        "type": 302
      }
    ]
  }
}
