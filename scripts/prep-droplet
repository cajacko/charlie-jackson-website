#!/bin/sh

if ssh root@$1 <<EOF;
then
  sudo apt-get -y update
  cd /home
  git clone -b develop --recursive https://github.com/cajacko/charlie-jackson-website.git
  cd /home/charlie-jackson-website
  echo "MYSQL_ROOT_PASSWORD=testpassword" >> .env
  echo "MYSQL_DATABASE=charliejackson" >> .env
  echo "MYSQL_USER=testuser" >> .env
  echo "MYSQL_PASSWORD=testpassword" >> .env
  exit
  EOF
  echo "SUCCESS"
else
  EOF
  echo "FAILURE"
fi
